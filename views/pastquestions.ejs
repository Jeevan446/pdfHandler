<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/pastquestion.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body  class="<%= user.role === 'admin' ? 'admin' : '' %>">
    <button id="backBtn"><i class="fa-solid fa-arrow-left" id="arrow" id="i"></i></button>
    <% if (user.role=="admin") { %>
        <a href="addquestion"><button id="add">Add questions</button></a>
        <% } %>

        <div id="dd">
    <% questions.forEach(function(f){ %>
        <a href="<%=f.url%>" target="_blank">
            <div id="questionitems"> <i class="fas fa-file-pdf" id="i"></i>
                <%=f.subjectname %> past question year <%=f.year%>
            </div>
        </a>
        <a href="/content/deletepastquestion/<%= f._id %>" id="delete"
            ><i class="fa fa-trash" aria-hidden="true" id="i"></i
          ></a>
        <% });%>
    </div>
        <script>
            document.getElementById("backBtn").addEventListener("click", function() {
              window.history.back(); // Navigate to the previous page
            });
          </script>
</body>

</html>